<div class="container">
	 <div class="card mb-4 shadow-sm">
	      <div class="card-header">
	        <h4 class="my-0 font-weight-normal"> <%= @post.title %></h4>
	      </div>
	      <div class="card-body">
	        <h5 class="card-title pricing-card-title"><%= @post.body %> </h5>
	        <ul class="list-unstyled mt-3 mb-2">
	          <li><%= @post.user.email %></li>
	         
	        </ul>
	      </div>
	</div>
	<h4> Comments </h4>
	<% @post.comments.each do |comment| %>
		<div class="alert alert-light">
			<p><strong><%= comment.username %></strong>: <%= comment.body %></p>
		</div>
	<%end%>

	<%= form_for([@post, @post.comments.build]) do |f| %>
		<% if @post.errors.any? %>
			<% @post.errors.full_messages.each do |msg| %>
				<div class="alert alert-danger"><%= msg %> </div>
			<% end %>
		<%end%>
		<p>
			User <br>
			<%= f.text_field(:username, {:class => 'form-control'}) %>
		</p>
		<p>
			Comment text <br>
			<%= f.text_area(:body, {:class => 'form-control'}) %>
		</p>
		<p>
			<%= f.submit("Add comment", {:class => 'btn btn-warning'}) %>
		</p>


	<%end%>
	<div class="card-body mt-1 mb-2">
        <%= link_to 'Edit', edit_post_path(@post) %>
        <%= link_to 'Back', posts_path %>
	</div>
</div>

 
