<div class="container">
	 <div class="card mb-4 shadow-sm">
	      <div class="card-header">
	        <h4 class="my-0 font-weight-normal"> <%= @post.title %></h4>
	      </div>
	      <div class="card-body">
	        <h5 class="card-title pricing-card-title"><%= @post.body %> </h5>
	        <ul class="list-unstyled mt-3 mb-2">
	          <li><%= @post.user.email %></li>
	         
	        </ul>
	      </div>
	</div>
	<div class="card-body mt-1 mb-2">
        <%= link_to 'Edit', edit_post_path(@post) %>
        <%= link_to 'Back', posts_path %>
	</div>
</div>

 
